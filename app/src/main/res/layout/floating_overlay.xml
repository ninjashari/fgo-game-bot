<?xml version="1.0" encoding="utf-8"?>
<!--
    FGO Bot - Floating Overlay Layout
    
    This layout defines the floating play button that appears when FGO is detected.
    Inspired by FGA's floating overlay system.
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/floating_button_background">

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:background="@drawable/floating_button_background"
        android:contentDescription="Start Automation"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_play_arrow"
        android:tint="@android:color/white" />

</FrameLayout> 