<?xml version="1.0" encoding="utf-8"?>
<!--
 * themes.xml
 * 
 * Purpose: Defines theme and style resources for the FGO Bot Android application
 * Role: Provides the main application theme referenced in AndroidManifest.xml
 -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.FGOBot" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/fgo_blue</item>
        <item name="colorPrimaryVariant">@color/fgo_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/fgo_gold</item>
        <item name="colorSecondaryVariant">@color/fgo_gold_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <!-- Theme for splash screen or launcher activities -->
    <style name="Theme.FGOBot.Launcher" parent="Theme.FGOBot">
        <item name="android:windowBackground">@color/fgo_blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources> 