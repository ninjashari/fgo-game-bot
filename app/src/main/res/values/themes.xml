<?xml version="1.0" encoding="utf-8"?>
<!--
    FGO Bot - Light Theme Configuration
    
    This file defines the light theme for the application using Material Design 3
    with custom FGO-inspired colors and styling.
-->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.FGOBot" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/fgo_blue</item>
        <item name="colorPrimaryVariant">@color/fgo_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/fgo_gold</item>
        <item name="colorSecondaryVariant">@color/fgo_gold_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.FGOBot.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/fgo_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.FGOBot</item>
    </style>
    
    <!-- Card styles -->
    <style name="CardView.FGOBot" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Button styles -->
    <style name="Button.FGOBot" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Button.FGOBot.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="TextAppearance.FGOBot.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.FGOBot.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary_light</item>
    </style>
    
    <style name="TextAppearance.FGOBot.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>
    
</resources> 